#include <iostream>
using namespace std;

// Function to enter data into dynamic array
void enterArrayData(double *arr, int size)
{
    cout << "Data entry for the array:" << endl;
    for (int i = 0; i < size; i++)
    {
        // TODO: populate array with user input
        cout << "    > Element #" << i << ": ";
        cin >> *(arr + i);
    }
    cout << "Data entry complete." << endl;
}

// Function to output array contents
void outputArrayData(double *arr, int size)
{
     // TODO: display array elements on one line
    cout << "Outputting array elements: ";
    for (int i = 0; i < size; i++)
    {
        cout << *(arr + i) << " ";
    }
    cout << endl;
}

// Function to calculate sum of array
double sumArray(double *arr, int size)
{
    // TODO: calculate sum
    double total = 0.0;
    for (int i = 0; i < size; i++)
    {
        total += *(arr + i);
    }
    return total;
}

// Main function
int main()
{
    const int SIZE = 5;

    // Allocate dynamic array
    double *myArray = new double[SIZE];

    // Call functions
    enterArrayData(myArray, SIZE);
    outputArrayData(myArray, SIZE);
    double total = sumArray(myArray, SIZE);

    cout << "Sum of values: " << total << endl;

    // Free dynamic memory
    delete [] myArray;

    return 0;
}
